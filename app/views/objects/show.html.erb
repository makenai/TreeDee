
<div id="treedee"></div>
<script type="text/javascript">
    var modelToLoad = '<%= raw @object.model.url %>';
</script>

<div id="tools">
    <a href="#" id="print">Print</a>
    <a href="#" id="threedee">Toggle 3D</a>
    <a href="#" id="zoom-in">Zoom In</a>
    <a href="#" id="zoom-out">Zoom Out</a>
    
    <a href="#" id="pan-left">Left</a>
    <a href="#" id="pan-down">Down</a>
    <a href="#" id="pan-up">Up</a>
    <a href="#" id="pan-right">Right</a>

    <a href="#" id="material">Material</a>
    <div id="material-selector">
      <div id="swatches">
        <% %w{ 
          000000 0000AA 00AA00 00AAAA 
          AA0000 AA00AA AA5500 AAAAAA
          555555 5555FF 55FF55 55FFFF
          FF5555 FF55FF FFFF55 FFFFFF
        }.each do |color| %>
          <a href="#" style="background-color: #<%= color %>;" data-color="<%= color %>"><%= color %></a>
        <% end %>
      </div>
    </div>
</div>

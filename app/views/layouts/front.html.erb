    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= favicon_link_tag '/assets/icon.png', :rel => 'shortcut icon' %>
    <link href='http://fonts.googleapis.com/css?family=Marcellus' rel='stylesheet' type='text/css'>
  </head>
  <body id="front">

    <div class="container">

      <div id="social-media">
        <div class="fb-like" data-href="http://treedee.net" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false"></div>

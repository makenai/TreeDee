    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= favicon_link_tag '/assets/icon.png', :rel => 'shortcut icon' %>
    <link href='http://fonts.googleapis.com/css?family=Marcellus' rel='stylesheet' type='text/css'>
